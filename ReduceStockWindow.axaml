<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:MSM.ViewModels"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="200"
        x:Class="MSM.ReduceStockWindow"
        x:DataType="viewModels:ReduceStockViewModel"
        Title="Reduce Stock">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Product:"/>
        <TextBlock Text="{Binding Product.Name}" FontWeight="Bold"/>

        <TextBlock Text="Current Quantity:"/>
        <TextBlock Text="{Binding Product.Quantity}"/>

        <TextBlock Text="Reduction Amount:"/>
        <NumericUpDown Value="{Binding ReductionAmount}" Minimum="1" Maximum="{Binding Product.Quantity}"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="OK" Command="{Binding OkCommand}"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>
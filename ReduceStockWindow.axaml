<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MSM.ReduceStockWindow"
        Title="Reduce Stock"
        Width="300" Height="250">
    <StackPanel Margin="20">
        <TextBlock Text="Product Name:"/>
        <TextBlock Name="NameTextBlock"/>
        <TextBlock Text="Current Quantity:" Margin="0,10,0,0"/>
        <TextBlock Name="CurrentQuantityTextBlock"/>
        <TextBlock Text="Reduce by:" Margin="0,10,0,0"/>
        <TextBox Name="ReduceByTextBox"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Name="OkButton" Content="OK"/>
            <Button Name="CancelButton" Content="Cancel" Margin="10,0,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MSM.ViewModels"
             xmlns:rxui="http://reactiveui.net"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
             x:Class="MSM.Views.EditProductView"
             x:DataType="viewModels:EditProductViewModel">
    <StackPanel Margin="20" Spacing="10" Width="400" Height="450">
        <TextBlock Text="Edit Product" FontSize="20" FontWeight="Bold"/>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock Text="바코드:" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Barcode}" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock Text="상품명:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Name}" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock Text="1회 차감 수량:" VerticalAlignment="Center"/>
            <NumericUpDown Value="{Binding DefaultReductionAmount}" Minimum="1" Maximum="100" Width="100"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock Text="이미지 경로:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding ImagePath}" IsReadOnly="True" Width="200"/>
            <Button Content="이미지 탐색" Command="{Binding BrowseImageCommand}"/>
        </StackPanel>

        <Image Source="{Binding ImagePath}" Width="150" Height="150" Stretch="UniformToFill" Margin="0,10,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,20,0,0">
            <Button Content="저장" Command="{Binding SaveCommand}"/>
            <Button Content="취소" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
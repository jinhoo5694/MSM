<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:MSM.ViewModels"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="MSM.AddProductWindow"
        x:DataType="viewModels:AddProductViewModel"
        Title="Add Product">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Barcode:"/>
        <TextBox Text="{Binding Barcode}" IsReadOnly="True"/>

        <TextBlock Text="Name:"/>
        <TextBox Text="{Binding Name}"/>

        <TextBlock Text="Quantity:"/>
        <NumericUpDown Value="{Binding Quantity}" Minimum="0"/>

        <TextBlock Text="Image Path:"/>
        <TextBox Text="{Binding ImagePath}"/>

        <TextBlock Text="Default Reduction Amount:"/>
        <NumericUpDown Value="{Binding DefaultReductionAmount}" Minimum="1"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Save" Command="{Binding SaveCommand}" CommandParameter="{Binding}"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:MSM.ViewModels"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="MSM.AddProductWindow"
        x:DataType="viewModels:AddProductViewModel"
        Title="Add Product"
        Height="500"
        Width="400">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="바코드:"/>
        <TextBox Text="{Binding Barcode}" IsReadOnly="True"/>

        <TextBlock Text="상품명:"/>
        <TextBox Text="{Binding Name}"/>

        <TextBlock Text="재고 수량:"/>
        <NumericUpDown Value="{Binding Quantity}" Minimum="0"/>

        <TextBlock Text="이미지 경로:"/>
        <TextBox Text="{Binding ImagePath}"/>

        <TextBlock Text="1회 차감 수량:"/>
        <NumericUpDown Value="{Binding DefaultReductionAmount}" Minimum="1"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="저장" Command="{Binding SaveCommand}" CommandParameter="{Binding .}"/>
            <Button Content="취소" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>
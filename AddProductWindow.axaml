<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MSM.AddProductWindow"
        Title="Add New Product"
        Width="300" Height="250">
    <StackPanel Margin="20">
        <TextBlock Text="Barcode:"/>
        <TextBox Name="BarcodeTextBox" IsReadOnly="True"/>
        <TextBlock Text="Product Name:" Margin="0,10,0,0"/>
        <TextBox Name="NameTextBox"/>
        <TextBlock Text="Quantity:" Margin="0,10,0,0"/>
        <TextBox Name="QuantityTextBox"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Name="SaveButton" Content="Save"/>
            <Button Name="CancelButton" Content="Cancel" Margin="10,0,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>

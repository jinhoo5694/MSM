<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="clr-namespace:MSM.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
        x:Class="MSM.EditAndReduceStockWindow"
        x:DataType="d:EditAndReduceStockViewModel"
        Title="Edit and Reduce Stock"
        MinHeight="800"
        Width="400"> <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="상품명:" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Name}" Width="360" Margin="0,0,0,10"/>

        <TextBlock Text="전체 수량:"/>
        <NumericUpDown Value="{Binding Quantity, Mode=TwoWay}" Width="360" Minimum="0"/>

        <TextBlock Text="1회 차감 수량:" Margin="0,10,0,5"/>
        <NumericUpDown Value="{Binding DefaultReductionAmount}"  Width="360" Margin="0,0,0,10"/>

        <TextBlock Text="안전 최소 수량:" Margin="0,0,0,5"/>
        <NumericUpDown Value="{Binding SafeQuantity}"  Width="360" Margin="0,0,0,10"/>

        <TextBlock Text="경고 최소 수량:" Margin="0,0,0,5"/>
        <NumericUpDown Value="{Binding AlertQuantity}"  Width="360" Margin="0,0,0,10"/>

        <StackPanel>
            <Image Source="{Binding ProductImage}" Width="100" Height="100" Stretch="UniformToFill"/>
            <TextBox Text="{Binding ImagePath, Mode=TwoWay}" IsReadOnly="True"/>
            <Button Content="이미지 탐색" Command="{Binding BrowseImageCommand}" />
        </StackPanel>

        <TextBlock Text="차감할 수량" Margin="0,10,0,0"/>
        <NumericUpDown Value="{Binding ReductionAmount}" Minimum="1" Maximum="{Binding Quantity}"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,20,0,0">
            <Button Content="저장" Command="{Binding SaveCommand}"/>
            <Button Content="차감 및 저장" Command="{Binding ReduceAndSaveCommand}"/>
            <Button Content="취소" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>